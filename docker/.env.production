# Production Environment Variables
# 데이터베이스 설정
POSTGRES_DB=finance_tracker_prod
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=your-super-secure-db-password-here

# Redis 설정
REDIS_PASSWORD=your-super-secure-redis-password-here

# JWT 설정
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars-here

# 애플리케이션 설정
NODE_ENV=production
CORS_ORIGIN=https://your-domain.com
VITE_API_URL=https://your-domain.com/api

# 모니터링 설정
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL 설정 (프로덕션에서 실제 도메인 사용)
SSL_DOMAIN=your-domain.com

# 백업 설정
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# 알림 설정
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL=admin@your-domain.com
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=alerts@your-domain.com
SMTP_PASSWORD=your-smtp-password
