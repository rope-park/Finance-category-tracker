{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "paths": {
      "@finance-tracker/shared": ["../../packages/shared/src/index.ts"],
      "@finance-tracker/shared/*": ["../../packages/shared/src/*"]
    },
    "ignoreDeprecations": "6.0",
  "typeRoots": ["./node_modules/@types", "src/core/types", "../../packages/shared/src/types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "../../packages/shared/src/types/**/*",
    "../../packages/shared/src/constants/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "../../packages/shared/src/hooks",
    "../../packages/shared/src/components",
    "../../packages/shared/src/utils/client",
    "**/hooks/**",
    "**/components/**"
  ],
  "ts-node": {
    "compilerOptions": {
      "strict": false,
      "noImplicitAny": false
    }
  }
}