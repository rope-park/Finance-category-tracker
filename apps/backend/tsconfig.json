{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@finance-tracker/shared": ["../../packages/shared/src"]
    },
  "typeRoots": ["./node_modules/@types", "./src/types", "../../packages/shared/src"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "../../packages/shared/src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "strict": false,
      "noImplicitAny": false
    }
  }
}