{
  "name": "@finance-tracker/backend",
  "version": "1.0.0",
  "description": "Finance Category Tracker Backend API - 개인 재정 관리 및 카테고리 기반 지출 추적을 위한 RESTful API 서버",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "db:health": "node -e \"require('./scripts/seed.js').checkConnection()\"",
    "db:schema": "psql -h ${DB_HOST:-localhost} -U ${DB_USER:-postgres} -d ${DB_NAME:-finance_tracker} -f scripts/schema.sql"
  },
  "keywords": [
    "finance",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "jwt",
    "typescript"
  ],
  "author": "Kelly",
  "license": "MIT",
  "dependencies": {
    "@finance-tracker/shared": "file:../../packages/shared",
    "@sentry/node": "^10.10.0",
    "@sentry/profiling-node": "^10.10.0",
    "@types/express-session": "^1.18.2",
    "@types/redis": "^4.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "finance-category-tracker": "file:../..",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "prom-client": "^13.2.0",
    "redis": "^5.8.2",
    "response-time": "^2.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.26",
    "undici": "^7.16.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.16.0",
    "@types/pg": "^8.11.17",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
