{
  "name": "finance-tracker-backend",
  "script": "dist/server.js",
  "instances": "max",
  "exec_mode": "cluster",
  "env": {
    "NODE_ENV": "production",
    "PORT": 3001
  },
  "env_development": {
    "NODE_ENV": "development",
    "PORT": 3001
  },
  "log_date_format": "YYYY-MM-DD HH:mm Z",
  "error_file": "./logs/pm2-err.log",
  "out_file": "./logs/pm2-out.log",
  "log_file": "./logs/pm2-combined.log",
  "time": true,
  "autorestart": true,
  "max_restarts": 10,
  "min_uptime": "10s",
  "max_memory_restart": "1G",
  "node_args": "--max-old-space-size=1024",
  "watch": false,
  "ignore_watch": [
    "node_modules",
    "logs",
    "*.log"
  ],
  "merge_logs": true,
  "source_map_support": true,
  "instance_var": "INSTANCE_ID",
  "kill_timeout": 5000,
  "listen_timeout": 3000,
  "shutdown_with_message": true,
  "wait_ready": true,
  "pmx": true,
  "monitoring": {
    "http": true,
    "https": false,
    "port": false,
    "exceptions": true,
    "custom_probes": true,
    "network": true,
    "ports": true
  }
}
