{
  "index_patterns": ["finance-tracker-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "5s"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "timestamp": {
          "type": "date"
        },
        "level": {
          "type": "keyword"
        },
        "message": {
          "type": "text",
          "analyzer": "standard"
        },
        "application": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "user_id": {
          "type": "keyword"
        },
        "client_ip": {
          "type": "ip"
        },
        "method": {
          "type": "keyword"
        },
        "request": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "status_code": {
          "type": "integer"
        },
        "status_category": {
          "type": "keyword"
        },
        "response_time": {
          "type": "float"
        },
        "response_category": {
          "type": "keyword"
        },
        "bytes": {
          "type": "integer"
        },
        "user_agent": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "referrer": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "severity": {
          "type": "keyword"
        },
        "has_stack_trace": {
          "type": "boolean"
        },
        "stack": {
          "type": "text"
        },
        "metadata": {
          "type": "object",
          "dynamic": true
        },
        "geoip": {
          "properties": {
            "continent_name": {
              "type": "keyword"
            },
            "country_name": {
              "type": "keyword"
            },
            "country_iso_code": {
              "type": "keyword"
            },
            "region_name": {
              "type": "keyword"
            },
            "city_name": {
              "type": "keyword"
            },
            "location": {
              "type": "geo_point"
            }
          }
        },
        "tags": {
          "type": "keyword"
        }
      }
    }
  }
}
